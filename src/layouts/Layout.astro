---
import "../styles/global.css"
import { ClientRouter } from "astro:transitions"
import { url } from "../utils/url"

const {
  title,
  description = "Portfolio personal de Jose Salas, desarrollador web. Proyectos, experiencia y artículos sobre desarrollo web entre otras muchas cosas.",
  image = url("og-image.png")
} = Astro.props

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- SEO básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Jose Salas" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph (LinkedIn, Facebook, WhatsApp) -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Jose Salas — Portfolio" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={url("favicon.svg")} />

    <!-- Fuente -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>

  <script>
    import { initReveal } from "../utils/reveal.js"
    initReveal()
    document.addEventListener("astro:page-load", initReveal)
  </script>

  <body class="bg-white text-gray-900 font-sans antialiased dark:bg-gray-950 dark:text-gray-100">
    <script is:inline>
      const theme = localStorage.getItem("theme")
      if (theme === "dark") document.documentElement.classList.add("dark")
    </script>
    <slot />
    <!-- Botón volver arriba -->
    <button
      id="back-to-top"
      class="fixed bottom-6 right-6 z-50 inline-flex items-center gap-1.5 px-3 py-2 rounded-full text-xs font-medium bg-white border border-gray-200 text-gray-500 shadow-sm opacity-0 pointer-events-none transition-all duration-300 hover:border-gray-400 hover:text-gray-900 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-400 dark:hover:border-gray-500 dark:hover:text-gray-100"
      aria-label="Volver arriba"
    >
      ↑
    </button>

    <script>
    function initBackToTop() {
      const btn = document.getElementById("back-to-top") as HTMLButtonElement
      const footer = document.querySelector("footer") as HTMLElement

      window.addEventListener("scroll", () => {
        const scrolledEnough = window.scrollY > 400
        const footerVisible = footer
          ? window.scrollY + window.innerHeight >= footer.offsetTop
          : false

        const show = scrolledEnough && !footerVisible
        btn.classList.toggle("opacity-0", !show)
        btn.classList.toggle("pointer-events-none", !show)
        btn.classList.toggle("opacity-100", show)
      })

      btn.onclick = () => window.scrollTo({ top: 0, behavior: "smooth" })
    }

    initBackToTop()
    document.addEventListener("astro:page-load", initBackToTop)
    </script>
  </body>
</html>