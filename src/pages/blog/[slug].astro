---
import Layout from "../../layouts/Layout.astro"
import Navbar from "../../components/Navbar.astro"
import Footer from "../../components/Footer.astro"
import { getCollection } from "astro:content"
import { url } from "../../utils/url"
import { readingTime } from "../../utils/readingTime"

export async function getStaticPaths() {
  const posts = await getCollection("blog")
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await post.render()
---

<Layout title={`${post.data.title} — Jose Salas`} description={post.data.description}>
  <Navbar />
  <main class="max-w-2xl mx-auto px-6 py-32">

    <!-- Cabecera del post -->
    <header class="mb-12">
      <div
        class="animate-fade-up flex flex-wrap gap-2 mb-4"
        style="animation-delay: 0.1s; opacity: 0; animation-fill-mode: forwards;"
      >
        {post.data.tags.map((tag) => (
          <span class="px-2 py-0.5 text-xs text-gray-500 bg-gray-50 border border-gray-100 rounded-full dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
            {tag}
          </span>
        ))}
      </div>

      <h1
        class="animate-fade-up text-4xl font-bold text-gray-900 leading-tight mb-4 dark:text-gray-100"
        style="animation-delay: 0.2s; opacity: 0; animation-fill-mode: forwards;"
      >
        {post.data.title}
      </h1>

      <time
        class="animate-fade-up text-sm text-gray-400"
        style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;"
      >
        {post.data.date.toLocaleDateString("es-ES", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })} · {readingTime(post.body)}
      </time>
    </header>

    <!-- Contenido del post -->
    <div
      class="animate-fade-up prose prose-gray max-w-none dark:prose-invert"
      style="animation-delay: 0.4s; opacity: 0; animation-fill-mode: forwards;"
    >
      <Content />
    </div>

    <!-- Volver al blog -->
    <a
      href={url("blog")}
      class="animate-fade-up inline-block mt-12 text-sm text-gray-400 hover:text-gray-700 transition-colors dark:hover:text-gray-200"
      style="animation-delay: 0.5s; opacity: 0; animation-fill-mode: forwards;"
    >
      ← Volver al blog
    </a>

  </main>
  <Footer />
</Layout>